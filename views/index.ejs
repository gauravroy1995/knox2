<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          Name:<input name="name" type="text" class="ghost-input" required />
          Email:<input name="email" type="email" class="ghost-input" required />
          Mobile:<input
            name="mobile"
            type="text"
            class="ghost-input"
            required
          />
          JobTitle:<input name="job" type="text" class="ghost-input" required />
          <input type="submit" class="ghost-button" value="Add Job" />
        </form>
      </fieldset>
      <table>
        <tr>
          <td>Name</td>
          <td>EMail</td>
          <td>Phone</td>
          <td>Job title</td>
        </tr>
        <% if(locals.people !== null) { %> <% locals.people.map(local=>{ %>
        <tr>
          <td><%= local.name %></td>
          <td><%= local.email %></td>
          <td><%= local.mobile %></td>
          <td><%= local.jobTitle %></td>
        </tr>

        <% })} %>
      </table>
    </div>
  </body>
</html>
